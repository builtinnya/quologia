<div class="navbar" data-ks-navbar>
  <nav>
    <ul>
      <li class="navbar-title">
        <%= link_to 'Quologia', root_path %>
        <button role="button">=</button>
      </li>
    </ul>
    <ul>
      <% if logged_in? %>
        <li>
          <%= link_to(new_quote_path) do %>
            <%= fa_icon_spaced 'plus-square', text: '名言' %>
          <% end %>
        </li>
        <li>
          <%= image_tag current_user.image_url, class: 'user-header-menu-top-icon' %>
          <span class="user-header-menu-top-text"><%= current_user.name %></span>
          <ul>
            <li>
              <%= link_to(logout_path) do %>
                <%= fa_icon_spaced 'sign-out', text: 'ログアウト' %>
