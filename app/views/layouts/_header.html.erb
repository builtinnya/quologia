            <li>
              <%= link_to('/auth/twitter') do %>
                <%= fa_icon_spaced 'twitter-square lg', text: 'Twitter' %>
              <% end %>
            </li>
            <li>
              <%= link_to('/auth/facebook') do %>
                <%= fa_icon_spaced 'facebook-square lg', text: 'Facebook' %>
              <% end %>
            </li>
          </ul>
        </li>
      <% end %>
    </ul>
  </nav>
