<%= javascript_tag do %>
 (function() {
   var ready = function() {
     var notice = <%= raw flash[:notice].to_json %>;
     var alert = <%= raw flash[:alert].to_json %>;

     if (notice) {
       k$.status({ text: notice, type: 'status-blue' });
     } else if (alert) {
       k$.status({ text: alert, type: 'status-red' });
     }
   };
   $(document).on('ready page:load', ready);
 })();
<% end %>
