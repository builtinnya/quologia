<%= javascript_tag do %>
 (function() {
   function pageLoadListener() {
     ready();
     $(this).off('page:load', pageLoadListener);
   };
   var ready = function() {
     var notice = <%= raw flash[:notice].to_json %>;
     var alert = <%= raw flash[:alert].to_json %>;

     if (notice) {
       k$.status({ text: notice, type: 'status-blue' });
     } else if (alert) {
       k$.status({ text: alert, type: 'status-red' });
     }

     $(this).off('page:load', pageLoadListener);
   };
   $(document).on('ready', ready);
   $(document).on('page:load', pageLoadListener);
 })();
<% end %>
